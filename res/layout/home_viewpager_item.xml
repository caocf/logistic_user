<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:background="@drawable/border_line" >

        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/package_green_32"
            android:drawablePadding="@dimen/dp10"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tv_expected_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/alarm_clock_green_32"
            android:drawablePadding="@dimen/dp10"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp15"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_carrier_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/user_green_32"
            android:drawablePadding="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tv_carrier_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_phone_32"
            android:drawablePadding="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/location_green_32"
            android:drawablePadding="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15" />
    </LinearLayout>

</LinearLayout>