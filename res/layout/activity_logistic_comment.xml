<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        layout="@layout/activity_top" />

    <LinearLayout
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/border_line"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_order_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/package_green_32"
                android:drawablePadding="@dimen/dp10"
                android:paddingLeft="@dimen/dp10"
                android:textColor="@color/black" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_line" >

            <TextView
                android:id="@+id/tv_satisfaction_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp10"
                android:text="@string/degree_of_satisfaction"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_satisfaction_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_satisfaction_title"
                android:paddingTop="@dimen/dp10" />

            <RatingBar
                android:id="@+id/room_ratingbar"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_satisfaction_title"
                android:layout_margin="@dimen/dp5"
                android:focusable="false"
                android:stepSize="1" >
            </RatingBar>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ry_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_line"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_comment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="@dimen/dp10"
                android:text="@string/comment_words" />

            <TextView
                android:id="@+id/tv_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_comment_title"
                android:layout_centerInParent="true"
                android:padding="@dimen/dp10"
                android:textColor="@color/black" />
        </RelativeLayout>

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_line"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:padding="@dimen/dp10"
            android:scrollbars="@null" />
    </LinearLayout>

</LinearLayout>